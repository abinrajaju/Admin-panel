<html lang="en">

<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>ADMIN PAGE</title>
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css">
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap-theme.min.css">
</head>
<style>
     @import url('https://fonts.googleapis.com/css2?family=Barlow&family=PT+Sans&display=swap');

     * {
          font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif
     }


     a {
          color: white;
     }

     a:hover {
          text-decoration: none;
          color: white;
     }

     .trbot {
          padding-top: 1.25em !important;
     }

     @media (max-width: 445px) {
          .trbot {
               padding-top: 3em !important;
          }
     }
</style>

<body>

     <main id='site-main'>
          <div class="container">
               <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-success">
                         <a href="/adduser" class="border-shadow">
                              <span class="text-gradient"><i class="fa-solid fa-user"></i>&nbsp; User &nbsp; <i
                                        class="fas fa-plus"></i> </span>
                         </a>
                    </button>
                    <button type="button" class="btn btn-danger">
                         <a href="/logout" class="border-shadow">
                              <span class="text-gradient"><i class="fa-solid fa-power-off"></i>&nbsp; Logout &nbsp;
                              </span>
                         </a>
                    </button>
               </div>
               <br><br>

               <!-- Search form -->
               <form class="form-inline" id="search_user" action="/search" method="get">
                    <div class="form-group mb-4 ">
                         <input class="form-control" type="text" name="name" placeholder="Search by Name"
                              aria-label="Search">
                    </div>
                    <div class="form-group mb-4 ml-2">
                         <input class="btn btn-primary" type="submit" value="Search">
                    </div>
               </form>
               <br><br>
               <!-- Form Handling -->
               <form action="/" method="post">
                    <table class="table">
                         <thead>
                              <tr class="bg-primary">
                                   <th scope="col">ID</th>
                                   <th scope="col">Name</th>
                                   <th scope="col">Email</th>
                                   <th scope="col" class="text-center">Actions</th>
                              </tr>
                         </thead>
                         <tbody>
                              <!-- tbody for looping through each data or single data-->
                              <% for(var i=0; i<users.length;i++){ %>
                                   <% if(users[i].email=="admin@gmail.com" ){continue}%>
                                        <tr>
                                             <th scope="row" class="trbot">
                                                  <%=i + 1%>
                                             </th>
                                             <td class="trbot">
                                                  <%= users[i].name %>
                                             </td>
                                             <td class="trbot">
                                                  <%= users[i].email %>
                                             </td>
                                             <td class="text-center">
                                                  <a class="btn border-shadow update"
                                                       href="/updateuser?id=<%= users[i]._id %>">
                                                       <button type="button" class="btn btn-warning"><i
                                                                 class="fas fa-pencil-alt"></i></button>
                                                  </a>
                                                  <a class="btn border-shadow delete" data-id="<%=users[i]._id %>">
                                                       <button type="button" class="btn btn-danger "
                                                            href="/deleteuser"><i class="fas fa-trash-alt"></i></button>
                                                  </a>
                                             </td>
                                        </tr>
                                        <% } %>
                         </tbody>
                    </table>
               </form>
          </div>
     </main>
     <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
     <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" ></script>
     <script src="/js/index.js"></script>

 
</body>

</html>